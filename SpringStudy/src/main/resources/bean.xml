<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--bean标签里头表示创建对象-->
    <bean id="user" class="com.muzimin.bean.User">
        <!--property里头表示设置属性-->
        <property name="name" value="muzimin"></property>
        <property name="age" value="23"></property>
    </bean>

    <!--通过p标签进行属性配置-->
    <bean id="user01" class="com.muzimin.bean.User" p:name="lhm" p:age="24"></bean>

    <!--给属性赋予特殊符号-->
    <bean id="order01" class="com.muzimin.bean.Order">
        <!--给属性赋予Null值-->
        <property name="orderName">
            <null/>
        </property>
        <!--给属性赋予特殊字符-->
        <property name="address">
            <value>
                <![CDATA[<<123>>]]>
            </value>
        </property>
    </bean>

    <!--使用有参构造创建对象-->
    <bean id="order" class="com.muzimin.bean.Order">
        <constructor-arg name="orderName" value="MapBook Pro"></constructor-arg>
        <constructor-arg name="price" value="12999"></constructor-arg>
    </bean>
</beans>